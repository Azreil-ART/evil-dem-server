generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Zayavka {
  id          Int      @id @default(autoincrement())
  equipment   String
  clientId    Int
  description String
  issueType   String
  executor    String
  status      String
  client      User     @relation(fields: [clientId], references: [id])
}

model User {
  id           Int      @id @default(autoincrement())
  fullName     String
  role         String
  organization String
  login        String   @unique
  password     String
  zayavki      Zayavka[]
}
